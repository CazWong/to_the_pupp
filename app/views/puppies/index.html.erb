<div class="container">
  <%= form_tag puppies_path, method: :get, class: "my-3" do %>
    <div class="d-flex">
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a puppy"
      %>
      <%= submit_tag "Search", class: "btn btn-flat ms-3" %>
    </div>
  <% end %>


  <div class="cards-puppy">
    <% @puppies.each do |puppy| %>
      <div class="card-puppy">
        <% puppy.photos.each do |photo| %>
          <%= cl_image_tag photo.key, class: "puppy-avatar-bordered" %>
        <% end %>
        <div class="card-puppy-infos">
          <div>
            <h2><%= puppy.name %></h2>
            <p><%= puppy.breed %></p>
          </div>
          <p class="card-puppy-pricing"><strong>$15 per day</strong></p>
          <%= image_tag "Photo.jpg", class: "card-puppy-user avatar-bordered" %>
        </div>
        <% if policy(puppy).show? %>
          <%= link_to 'Pat me!', puppy_path(puppy), class: "btn btn-flat ms-3 mb-3" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>


<br>

<%= link_to 'Add a new puppy', new_puppy_path %>
