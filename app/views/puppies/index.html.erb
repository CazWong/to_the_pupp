<%# // ORIGINAL // %>
<div class="container">
  <%= form_tag puppies_path, method: :get, class: "my-3" do %>
    <div class="d-flex">
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a puppy"
      %>
      <%= submit_tag "Search", class: "btn btn-flat ms-3" %>
    </div>
  <% end %>

  <div style="width: 100%; height: 600px;"
    data-controller="mapbox"
    data-mapbox-markers-value="<%= @markers.to_json %>"
    data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <br>

  <div class="cards-puppy">
    <% @puppies.each do |puppy| %>
      <%= render 'puppy', puppy: puppy %>
    <% end %>
  </div>
<br>
