<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <h1>
      <%= link_to root_path class: "navbar-brand" do %>
        <i class="fas fa-solid fa-paw"></i>
      <% end %>
    </h1>



    <h1><%= link_to "TothePupp", root_path %> <i class="fas fa-solid fa-bone"></i></h1>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li><br></li>

          <li class="nav-item dropdown">
            <%= image_tag "Photo.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "My Bookings", my_bookings_path, class: "dropdown-item" %>
              <%= link_to "My Puppies", my_puppies_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link btn btn-primary text-white " %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
