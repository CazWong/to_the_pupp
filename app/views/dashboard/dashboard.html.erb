<div class="container my-5">
  <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
    <li class="nav-item me-1" role="presentation">
      <button class="btn btn-secondary btn-sm" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Pending Bookings</button>
    </li>
    <li class="nav-item me-1" role="presentation">
      <button class="btn btn-secondary btn-sm" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Confirmed Bookings</button>
    </li>
    <li class="nav-item me-1" role="presentation">
      <button class="btn btn-secondary btn-sm" id="pills-contact-tab" data-bs-toggle="pill" data-bs-target="#pills-contact" type="button" role="tab" aria-controls="pills-contact" aria-selected="false">My Puppies</button>
    </li>
  </ul>
  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
        <div class="d-flex justify-content-around mx-4">
          <% @bookings.each do |booking| %>
            <% if booking.status == "pending" %>
              <div class="dashboard-card">
                hello
                edit booking
                delete booking
                <%= booking.total_cost_per_night %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
        <div class="d-flex justify-content-around mx-4">
          <% @bookings.each do |booking| %>
            <% if booking.status == "approved" %>
              <div class="dashboard-card">
                hello
                edit booking
                delete booking
                <%= booking.total_cost_per_night %>
              </div>
            <% end %>
          <% end %>
        </div>
    </div>
      <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
        <div class="d-flex justify-content-around">
          <% @owners_puppies.each do |puppy| %>
            <div class="dashboard-card">
              Puppy
              edit details
              remove puppy from listing
              <%= puppy.cost_per_night %>
            </div>
          <% end %>
        </div>
          New pup
      </div>
  </div>
</div>
<%# cool beans %>
