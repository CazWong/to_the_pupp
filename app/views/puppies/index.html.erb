<br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Breed</th>
    </tr>
  </thead>

  <tbody>
    <% @puppies.each do |puppy| %>
      <tr>
        <td><%= puppy.name %></td>
        <td><%= puppy.breed %></td>
          <% if policy(puppy).show? %>
        <td><%= link_to 'Show', puppy %></td>
        <% end %>
          <% if policy(puppy).edit? %>
        <td><%= link_to 'Edit', edit_puppy_path(puppy) %></td>
        <% end %>
        <% if policy(puppy).destroy? %>
        <td><%= link_to 'Delete :(', puppy_path(puppy), method: :delete %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add a new puppy', new_puppy_path %>
